<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ReportsController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="1000.0">
         <children>
            <TabPane prefHeight="400.0" prefWidth="1000.0" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab fx:id="customer_tab" onSelectionChanged="#customerTabOnSelectionChanged" text="Customer Appointments">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <VBox prefHeight="400.0" prefWidth="1000.0">
                                 <children>
                                    <TableView fx:id="customer_table_view" prefWidth="1000.0">
                                      <columns>
                                        <TableColumn fx:id="basic_column" prefWidth="174.0" />
                                        <TableColumn fx:id="num_appointments_column" prefWidth="122.0" text="Total Appointments" />
                                      </columns>
                                    </TableView>
                                    <HBox prefHeight="100.0" prefWidth="200.0">
                                       <children>
                                          <RadioButton fx:id="type_radio_button" mnemonicParsing="false" onAction="#typeRadioButtonOnAction" selected="true" text="By Type">
                                             <toggleGroup>
                                                <ToggleGroup fx:id="radioButtonToggleGroup" />
                                             </toggleGroup>
                                          </RadioButton>
                                          <RadioButton fx:id="month_radio_button" mnemonicParsing="false" onAction="#monthRadioButtonOnAction" text="By Month" toggleGroup="$radioButtonToggleGroup" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
                  <Tab fx:id="contact_tab" onSelectionChanged="#contactTabOnSelectionChanged" text="Contact Schedule">
                     <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <HBox prefHeight="400.0" prefWidth="1000.0">
                                 <children>
                                    <VBox alignment="TOP_CENTER" prefWidth="200.0">
                                       <children>
                                          <Label text="Contact" />
                                          <ListView fx:id="contact_listview" prefWidth="200.0" />
                                       </children>
                                    </VBox>
                                    <TableView fx:id="contact_table_view" prefWidth="800.0">
                                      <columns>
                                        <TableColumn fx:id="contact_appointment_id_column" prefWidth="100.0" text="Appointment ID" />
                                        <TableColumn fx:id="contact_title_column" prefWidth="150.0" text="Title" />
                                          <TableColumn fx:id="contact_type_column" prefWidth="150.0" text="Type" />
                                          <TableColumn fx:id="contact_description_column" prefWidth="200.0" text="Description" />
                                          <TableColumn fx:id="contact_start_column" prefWidth="150.0" text="Start Date/Time" />
                                          <TableColumn fx:id="contact_end_column" prefWidth="150.0" text="End Date/Time" />
                                          <TableColumn fx:id="contact_customer_id_column" prefWidth="100.0" text="Customer ID" />
                                      </columns>
                                    </TableView>
                                 </children>
                              </HBox>
                           </children>
                        </AnchorPane>
                     </content>
                  </Tab>
                <Tab fx:id="user_tab" onSelectionChanged="#userTabOnSelectionChanged" text="User Logins (requirement)">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <TableView fx:id="user_table_view" prefWidth="1000.0">
                                <columns>
                                  <TableColumn fx:id="user_user_column" prefWidth="75.0" text="User" />
                                  <TableColumn fx:id="user_timestamp_column" prefWidth="141.0" text="Timestamp" />
                                    <TableColumn fx:id="user_success_column" prefWidth="195.0" text="Success" />
                                </columns>
                              </TableView>
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
                  <Tab fx:id="additional_report_tab" onSelectionChanged="#additionalReportTabOnSelectionChanged" text="Additional Report">
                     <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <TableView fx:id="user_table_view1" prefWidth="1000.0">
                                 <columns>
                                    <TableColumn prefWidth="75.0" text="C1" />
                                    <TableColumn prefWidth="75.0" text="C2" />
                                 </columns>
                              </TableView>
                           </children>
                        </AnchorPane>
                     </content>
                  </Tab>
              </tabs>
            </TabPane>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#backButtonOnAction" text="Back" />
         </children>
      </VBox>
   </children>
</AnchorPane>
