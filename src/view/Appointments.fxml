<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CustomersController">
    <children>
        <VBox alignment="CENTER" prefHeight="500.0">
            <children>
                <HBox prefHeight="400.0" prefWidth="1200.0" spacing="20.0">
                    <children>
                        <TableView fx:id="table_view_id" prefHeight="200.0">
                            <columns>
                                <TableColumn fx:id="appointment_id_tablecolumn" minWidth="-1.0" prefWidth="86.0" text="Appt_ID" />
                                <TableColumn fx:id="title_tablecolumn" minWidth="-1.0" prefWidth="94.0" text="Title" />
                                <TableColumn fx:id="description_tablecolumn" minWidth="-1.0" prefWidth="150.0" text="Description" />
                                <TableColumn fx:id="location_tablecolumn" minWidth="-1.0" prefWidth="75.0" text="Location" />
                                <TableColumn fx:id="contact_tablecolumn" minWidth="-1.0" prefWidth="125.0" text="Contact" />
                                <TableColumn fx:id="type_tablecolumn" minWidth="-1.0" prefWidth="100.0" text="Type" />
                                <TableColumn fx:id="start_date_time_tablecolumn" minWidth="-1.0" prefWidth="100.0" text=" Start Date/Time" />
                        <TableColumn fx:id="end_date_time_tablecolumn" minWidth="-1.0" prefWidth="100.0" text="End Date/Time" />
                        <TableColumn fx:id="customer_id_tablecolumn" minWidth="-1.0" prefWidth="100.0" text="Customer_ID" />
                        <TableColumn fx:id="user_id_tablecolumn" minWidth="-1.0" prefWidth="100.0" text="User_ID" />
                            </columns>
                        </TableView>
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#newCustomerButtonOnAction" text="New Customer" />
                        <Button mnemonicParsing="false" onAction="#deleteCustomerButtonOnAction" text="Delete Customer" />
                        <Button mnemonicParsing="false" onAction="#logoutButtonOnAction" text="Logout" />
                    </children>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                </HBox>
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <padding>
                <Insets top="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
